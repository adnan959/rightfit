# OpenAI API Key (required for CV grading)
OPENAI_API_KEY=sk-your-api-key-here

# Supabase Configuration
# Get these from your Supabase project settings: https://supabase.com/dashboard/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Admin Password (for backoffice access)
ADMIN_PASSWORD=your-secure-password-here

# Stripe Configuration (for payments)
# Get these from your Stripe dashboard: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_...
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...

# Resend Configuration (for emails)
# Get this from your Resend dashboard: https://resend.com/api-keys
RESEND_API_KEY=re_...
# Optional: Custom "from" email (requires verified domain in Resend)
# RESEND_FROM_EMAIL=ApplyBetter <noreply@applybetter.com>
# RESEND_REPLY_TO=hello@applybetter.com

# Order Token Secret (for secure magic links)
# Generate a random string for production security
ORDER_TOKEN_SECRET=your-secret-key-here
